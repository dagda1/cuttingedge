{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "jsx": "react",
    "outDir": "./dist",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": ["es5", "es2015", "es2016", "dom"],
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "strictFunctionTypes": false,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitReturns": true,
    "removeComments": false
  }
}
