{
  "baseBranches": ["main"],
  "extends": ["config:base", "group:monorepos", ":dependencyDashboard"],
  "dependencyDashboard": false,
  "automerge": true,
  "semanticCommits": "enabled",
  "rangeStrategy": "bump",
  "rebaseLabel": "rebase",
  "rebaseWhen": "auto",
  "requiredStatusChecks": [],
  "prConcurrentLimit": 5,
  "updateInternalDeps": true,
  "lockFileMaintenance": {
    "enabled": false
  },
  "includePaths": [
    "apps/*",
    "packages/*"
  ],
  "packageRules": [
    {
      "matchPaths": ["apps/", "packages/"],
      "updateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true,
      "depTypeList": ["dependencies", "devDependencies"],
      "groupName": "all",
      "groupSlug": "all"
    },
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    }
  ]
}