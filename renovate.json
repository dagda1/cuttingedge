{
  "baseBranches": ["main"],
  "extends": ["config:base", "group:monorepos", ":dependencyDashboard"],
  "dependencyDashboard": false,
  "automerge": true,
  "includePaths": ["package.json"],
  "semanticCommits": "enabled",
  "rangeStrategy": "bump",
  "rebaseLabel": "rebase",
  "rebaseWhen": "auto",
  "requiredStatusChecks": [],
  "prConcurrentLimit": 5,
  "updateInternalDeps": true,
  "lockFileMaintenance": {
    "enabled": false
  },
  "packageRules": [
    {
      "updateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    },
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    }
  ]
}