{
  "extends": ["config:base", "group:monorepos"],
  "baseBranches": ["main"],
  "semanticCommitScope": "deps",
  "rangeStrategy": "bump",
  "rebaseLabel": "rebase",
  "rebaseWhen": "auto",
  "requiredStatusChecks": [],
  "timezone": "Europe/Dublin",
  "schedule": ["after 1pm and before 6pm every weekend"],
  "lockFileMaintenance": {
    "enabled": false
  },
  "ignoreDeps": ["remark-gfm"],
  "packageRules": [
    {
      "packageNames": ["node", "pnpm"],
      "enabled": false
    },
    {
      "updateTypes": ["major", "minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "depTypeList": ["dependencies", "devDependencies"],
      "enabled": true,
      "automerge": true
    },
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    },
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    }
  ]
}
