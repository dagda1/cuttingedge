{
  "name": "cuttingedge",
  "version": "4.22.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "audit-packages": "cutting each-pkg cutting audit",
    "build": "turbo run build --scope=\"packages/**/*\"",
    "build:apps": "turbo run build --scope=\"@cutting/website\"",
    "build:tsc": "tsc -b ./tsconfig.packages.json",
    "clean": "pnpm build:tsc -- --clean && find . \\( -name node_modules -o -name dir2 -o -path name \\) -prune -false -o -name 'dist' -type d   -exec rm -rf {} +",
    "lint": "turbo run lint",
    "lint:js": "eslint --ext .js . -c ./packages/devtools/.eslintrc.json --ignore-path ./.eslintignore --fix",
    "prepare": "husky install",
    "test": "CI=true turbo run test",
    "watch": "build:tsc && pnpm tsc -b ./tsconfig.packages.json --watch",
    "version": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@babel/runtime": "^7.17.2",
    "@changesets/cli": "^2.20.0",
    "@cutting/devtools": "workspace:./packages/devtools",
    "@cutting/tsconfig": "workspace:./packages/tsconfig",
    "core-js": "3.21.0",
    "follow-redirects": "^1.14.8",
    "husky": "^7.0.4",
    "node-fetch": "^3.2.0",
    "turbo": "^1.1.2",
    "typescript": "^4.5.5"
  },
  "lint-prepush": {
    "base": "main",
    "tasks": {
      "*.{js,jsx,ts,tsx,js,md}": [
        "pnpm lint"
      ]
    }
  },
  "packageManager": "pnpm@6.30.1",
  "volta": {
    "node": "16.13.2",
    "pnpm": "6.31.0"
  },
  "pnpm": {
    "overrides": {
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
      "nth-check@<2.0.1": ">=2.0.1",
      "immer@<9.0.6": ">=9.0.6",
      "tar@<4.4.18": ">=4.4.18",
      "browserslist@>=4.0.0 <4.16.5": ">=4.16.5",
      "trim@<0.0.3": ">=0.0.3",
      "postcss@<8.2.13": ">=8.2.13",
      "node-forge@<1.0.0": ">=1.0.0",
      "marked@<4.0.10": ">=4.0.10",
      "node-fetch@<2.6.7": ">=2.6.7",
      "glob-parent@<5.1.2": ">=5.1.2",
      "follow-redirects@<1.14.8": ">=1.14.8"
    }
  }
}
