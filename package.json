{
  "name": "cuttingedge",
  "version": "4.22.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/devtools",
      "packages/eslint-config",
      "packages/tsconfig",
      "packages/useful-types",
      "packages/devtools",
      "packages/util",
      "packages/hooks",
      "packages/use-get-parent-size",
      "packages/react-abortable-fetch",
      "packages/component-library",
      "packages/svg",
      "packages/use-mathjax",
      "packages/use-shortcuts",
      "packages/graphql-explorer",
      "packages/website"
    ]
  },
  "scripts": {
    "audit-packages": "cutting each-pkg cutting audit",
    "build": "nx run-many --target=build --all --parallel --exclude=@cutting/website",
    "build:tsc": "tsc -b ./tsconfig.packages.json",
    "clean": "pnpm build:tsc -- --clean && find . \\( -name node_modules -o -name dir2 -o -path name \\) -prune -false -o -name 'dist' -type d   -exec rm -rf {} +",
    "lint": "nx run-many --target=lint --all --parallel --exclude=@cutting/website",
    "lint:js": "eslint --ext .js . -c ./packages/devtools/.eslintrc.json --ignore-path ./.eslintignore --fix",
    "prepare": "husky install",
    "test": "CI=true nx run-many --target=test --all --parallel --exclude=@cutting/website",
    "watch": "build:tsc && pnpm tsc -b ./tsconfig.packages.json --watch",
    "version": "changeset version && pnpm install --lockfile-only",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "@cutting/devtools": "4.31.6",
    "@cutting/tsconfig": "4.26.2",
    "@nrwl/cli": "^13.4.1",
    "@nrwl/nx-cloud": "^13.0.1",
    "@nrwl/tao": "^13.4.1",
    "@nrwl/workspace": "^13.4.1",
    "husky": "^7.0.4",
    "typescript": "^4.5.5"
  },
  "lint-prepush": {
    "base": "main",
    "tasks": {
      "*.{js,jsx,ts,tsx,js,md}": [
        "pnpm lint"
      ]
    }
  },
  "packageManager": "pnpm@6.30.1",
  "volta": {
    "node": "14.18.1"
  },
  "pnpm": {
    "overrides": {
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
      "nth-check@<2.0.1": ">=2.0.1",
      "immer@<9.0.6": ">=9.0.6",
      "tar@<4.4.18": ">=4.4.18",
      "tar@<4.4.16": ">=4.4.16",
      "tar@<3.2.2": ">=3.2.2",
      "tar@<3.2.3": ">=3.2.3",
      "browserslist@>=4.0.0 <4.16.5": ">=4.16.5",
      "trim@<0.0.3": ">=0.0.3",
      "postcss@<8.2.13": ">=8.2.13",
      "node-forge@<1.0.0": ">=1.0.0",
      "follow-redirects@<1.14.7": ">=1.14.7",
      "marked@<4.0.10": ">=4.0.10",
      "node-fetch@<2.6.7": ">=2.6.7",
      "glob-parent@<5.1.2": ">=5.1.2",
      "follow-redirects@<1.14.8": ">=1.14.8"
    }
  }
}
