{
  "name": "cuttingedge",
  "version": "4.11.0",
  "private": true,
  "scripts": {
    "build": "yarn workspaces run build",
    "build:tsc": "tsc --build ./tsconfig.monorepo.json",
    "clean:tsbuild": "find .  \\( -name node_modules -o -name dir2 -o -path name \\) -prune -false -o -name 'dist'  -exec rm -rf {} + -o -name '*.tsbuildinfo'  -exec rm -rf {} +",
    "test": "CI=true yarn workspaces run test",
    "start": "yarn build && yarn --cwd packages/website start",
    "publish:all": "NODE_ENV=production cutting each-pkg yarn publish -- --non-interactive --verbose",
    "audit-packages": "cutting each-pkg cutting audit",
    "lint": "eslint 'packages/**/*.{ts,tsx,js}' -c ./packages/component-library/.eslintrc.json --ignore-path ./.eslintignore --fix",
    "lint:js": "eslint --ext .js . -c ./packages/devtools/.eslintrc.json --ignore-path ./.eslintignore --fix",
    "watch": "yarn build:tsc && yarn tsc -b ./tsconfig.monorepo.json --watch"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "husky": "^4.3.6",
    "inquirer": "^7.3.3",
    "node-sass": "^5.0.0",
    "typescript": "^4.1.3"
  },
  "workspaces": {
    "packages": [
      "packages/devtools",
      "packages/testing",
      "packages/eslint-config",
      "packages/useful-types",
      "packages/devtools",
      "packages/util",
      "packages/hooks",
      "packages/use-abort",
      "packages/component-library",
      "packages/svg",
      "packages/use-mathjax",
      "packages/use-shortcuts",
      "packages/website"
    ]
  },
  "resolutions": {
    "@types/react": "^17.0.0",
    "@types/webpack": "4.41.21",
    "d3-array": "^2.4.0",
    "node-forge": "^0.10.0",
    "postcss": "^7.0.35"
  }
}