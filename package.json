{
  "name": "cuttingedge",
  "version": "4.22.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "audit-packages": "devtools each-pkg devtools audit",
    "all": "pnpm i && pnpm build && pnpm lint && pnpm test",
    "build": "turbo run build",
    "build:tsc": "tsc -b ./tsconfig.packages.json",
    "clean": "rm -rf ./packages/*/{tsconfig.*tsbuildinfo,dist}",
    "lint": "turbo run lint",
    "lint:js": "eslint --ext .js . -c ./packages/devtools/.eslintrc.json --ignore-path ./.eslintignore --fix",
    "prepare": "husky install",
    "test": "CI=true turbo run test",
    "watch": "pnpm build:tsc && pnpm tsc -b ./tsconfig.packages.json --watch",
    "ci:version": "changeset version && pnpm install --frozen-lockfile false",
    "prerelease": "pnpm clean && pnpm install && pnpm run build",
    "release": "pnpm run prerelease && changeset publish && git push --follow-tags && git status && pnpm -r publish"
  },
  "devDependencies": {
    "@babel/core": "7.18.2",
    "@babel/plugin-proposal-numeric-separator": "7.16.7",
    "@babel/plugin-proposal-private-methods": "7.17.12",
    "@babel/plugin-proposal-private-property-in-object": "7.17.12",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/runtime": "7.18.2",
    "@changesets/cli": "2.22.0",
    "@cutting/devtools": "workspace:*",
    "@cutting/tsconfig": "workspace:*",
    "babel-loader": "8.2.5",
    "core-js": "3.22.7",
    "css-loader": "6.7.1",
    "eslint": "8.16.0",
    "file-loader": "6.2.0",
    "follow-redirects": "1.15.0",
    "html-loader": "3.1.0",
    "husky": "8.0.1",
    "markdown-loader": "8.0.0",
    "node-fetch": "3.2.4",
    "regenerator-runtime": "0.13.9",
    "style-loader": "3.3.1",
    "ts-loader": "9.3.0",
    "turbo": "1.2.12",
    "typescript": "4.7.2",
    "webpack": "5.72.1",
    "whatwg-fetch": "3.6.2"
  },
  "packageManager": "pnpm@6.32.17",
  "volta": {
    "node": "16.15.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "pnpm build && pnpm lint"
    }
  },
  "pnpm": {
    "overrides": {
      "@babel/core@<7.17.8": ">=7.17.8",
      "@babel/types@<7.17.0": ">=7.17.3",
      "ansi-regex@>2.1.1 <5.0.1": ">=5.0.1",
      "acorn@<8.7.0": ">=8.7.0",
      "commander@<9.0.0": ">=9.1.0",
      "nth-check@<2.0.1": ">=2.0.1",
      "immer@<9.0.6": ">=9.0.6",
      "tar@<4.4.18": ">=4.4.18",
      "browserslist@>=4.0.0 <4.16.5": ">=4.16.5",
      "trim@<0.0.3": ">=0.0.3",
      "postcss@<8.2.13": ">=8.2.13",
      "node-forge@<1.0.0": ">=1.0.0",
      "marked@<4.0.10": ">=4.0.10",
      "node-fetch@<2.6.7": ">=2.6.7",
      "glob-parent@<5.1.2": ">=5.1.2",
      "follow-redirects@<1.14.8": ">=1.14.8"
    }
  }
}
