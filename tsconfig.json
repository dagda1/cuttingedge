{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "jsx": "react",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "include": ["src/client/**/*"],
  "exclude": ["node_modules", "src/server/**/*"]
}
