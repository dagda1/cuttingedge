{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest Tests",
      "program": "${cwd}/../../node_modules/jest/bin/jest.js",
      "cwd": "${cwd}",
      "args": [
        "--runInBand",
        "--no-cache",
        "--env=jsdom",
        "--config=${cwd}/../devtools/jest/jest.config.js",
        "${file}"
      ],
      "runtimeArgs": ["--nolazy"],
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "test",
        "BABEL_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["${cwd}/../../node_modules/**/*.js"]
    }
  ]
}
