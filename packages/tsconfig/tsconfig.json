{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "removeComments": false,
    "checkJs": false,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "dom"
    ],
    "types": [
      "node",
      "webpack-env",
      "@cutting/useful-types"
    ],
    "typeRoots": [
      "../../../node_modules/@types"
    ]
  }
}