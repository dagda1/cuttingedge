{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "traceResolution": true,
    "noImplicitAny": false,
    "paths": {
      "*": [
        "src/client/*",
        "src/shared/*",
        "src/server/*"
      ]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "outDir": "./public/assets",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "diagnostics": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "include": [
    "src/shared/**/*.ts",
    "src/client/**/*.tsx",
    "src/serveer/**/*.tsx"
  ],
  "exclude": [
    "../../node_modules",
    "build",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}