{
  "extends": "../../tsconfig-base.json",
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDirs": ["./src", "./bin"],
    "skipLibCheck": true,
    "isolatedModules": false,
    "noEmit": false
  },
  "include": ["src/**/*.ts", "bin/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/**/*.test.tsx"]
}
